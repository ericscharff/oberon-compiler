MODULE IOOperations;

IMPORT Out;

CONST
  Hi = "Hello ðŸ‚¤ ðŸ‚¥ ðŸ‚¦ World";
VAR
  a, i: INTEGER;

PROCEDURE Neat(x: INTEGER);
BEGIN
  Out.Char(CHR(x))
END Neat;

BEGIN
  Out.Str(Hi);
  Out.Ln;
  Out.Char(65X);
  i := 65;
  WHILE i < 91 DO
    Neat(i);
    i := i + 1
  END;
  Out.Ln;
  ReadInt(a);
  a := a + 1;
  Out.Int(a);
  Out.Ln
END IOOperations.
