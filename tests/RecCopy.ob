MODULE RecCopy;

TYPE
  D = ARRAY 500 OF INTEGER;
  R = RECORD (* d :D; *) a, b, c :INTEGER END;

VAR
  r1, r2 :R;

PROCEDURE DoCopy(VAR aa1, aa2 :R);
BEGIN
  aa1 := aa2
END DoCopy;

BEGIN
  r2.a := 10; r2.b := 20; r2.c := 30;
  DoCopy(r1, r2);
(*  r1 := r2; *)
  WriteInt(r1.a);
  WriteInt(r1.b);
  WriteInt(r1.c);
  WriteLn
END RecCopy.
