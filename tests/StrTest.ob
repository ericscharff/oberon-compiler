MODULE StrTest;

PROCEDURE ToLower(VAR c: ARRAY OF CHAR);
VAR i: INTEGER;
BEGIN
  i := 0;
  WHILE i < LEN(c) DO
    IF (c[i] >= "A") & (c[i] <= "Z") THEN
      c[i] := CHR(ORD(c[i]) + 32)
    END;
    i := i + 1
  END
END ToLower;

PROCEDURE Middle(s: INTEGER; VAR c: ARRAY OF CHAR; s2: INTEGER);
BEGIN
  IF (s = 81) & (s2 = 82) THEN
    ToLower(c)
  END
END Middle;

PROCEDURE WriteString(s: ARRAY OF CHAR);
VAR i: INTEGER;
BEGIN
  i := 0;
  WHILE s[i] # 0X DO
    WriteChar(s[i]);
    i := i + 1
  END;
  WriteLn
END WriteString;

PROCEDURE Test;
VAR
  ca: ARRAY 10 OF CHAR;
BEGIN
  WriteString("Hello, world!");
  ca[0] := 41X;
  ca[1] := 42X;
  ca[2] := 63X;
  ca[3] := 44X;
  ca[4] := 45X;
  ca[5] := 0X;
  WriteString(ca);
  Middle(81, ca, 82);
  WriteString(ca);
END Test;

BEGIN
  Test
END StrTest.
