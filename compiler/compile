#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PARENTDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && cd .. && pwd )"
BUILDDIR=$PARENTDIR/build
COMPILERDIR=$PARENTDIR/compiler
PERR=$COMPILERDIR/perr.py

cp $COMPILERDIR/*.ob $BUILDDIR
cp *.ob $BUILDDIR
cd $BUILDDIR

CC=${CC:-cc}
CXX=${CXX:-g++}
EXT=.c
CSTDFLAGS=-std=c17
OCFLAGS=
inSwitches=1

while [ $inSwitches -eq 1 ]; do
  if [ $1 = "-cpp" ]; then
    CC=$CXX
    EXT=.cpp
    OCFLAGS="$OCFLAGS -cpp"
    CSTDFLAGS=
    shift
  elif [ $1 = "-bounds" ]; then
    OCFLAGS="$OCFLAGS -bounds"
    shift
  elif [ $1 = "-dumpdecl" ]; then
    OCFLAGS="$OCFLAGS -dumpdecl"
    shift
  else
    inSwitches=0
  fi
done

cd $BUILDDIR
./oberon $OCFLAGS $1 | $PERR
./oberon $OCFLAGS $1 > out$EXT && $CC -g $CSTDFLAGS -Wall -Wextra -Wpedantic -Wno-unused-parameter -o out.prg out$EXT
